<h1>Edit Cereal</h1>

<form action="/cereals/<%= @cereal.id %>" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <input type="text" name="cereal_name" placeholder="cereal name" value="<%= @cereal.name %>">
  <input type="number" name="cereal_rating" placeholder="rating 1 - 10" min="1" max="10" value="<%= @cereal.rating %>">
  <button type="submit">Update Cereal</button>
</form>