<!DOCTYPE html>

  <head>
    <title>Authentication</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   <html> <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    <ul>
      <% if logged_in? %>
        <li><%= link_to  "logout", logout_path %></li>
      <% else %>
        <li><%= link_to  "login", login_path %></li>
      <% end %>
    </ul>
    </nav>
    <%= yield %>
  </body>
</html>
